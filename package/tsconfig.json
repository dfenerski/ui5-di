{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "verbatimModuleSyntax": true,
        "rootDir": "./",
        "types": [
            "@openui5/types",
            "@types/jquery",
            "@types/qunit",
            "reflect-metadata"
        ],
        "paths": {
            "com/github/dfenerski/ui5_di/*": [
                "./src/com/github/dfenerski/ui5_di/*"
            ]
        }
    },
    "include": ["./src/**/*", "./test/**/*"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
