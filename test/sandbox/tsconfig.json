{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "verbatimModuleSyntax": true,
        "rootDir": "./",
        "outDir": "dist"
    },
    "ts-node": {
        "esm": true,
        "transpileOnly": true,
        "experimentalSpecifierResolution": "node"
    }
}
